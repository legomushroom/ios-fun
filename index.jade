					rect(id="id1", transform="rotate(0)", fill="url(#gradient-pattern)", width="100%", height="100%")

				script
					var el = document.getElementById('id1');
					var i = 0;
					var interval = setInterval(function(){
						i++;
						el.setAttribute('transform','rotate(' + i + ', 1800, 1800)');
